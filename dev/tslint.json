{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "max-classes-per-file": { "severity": "off" }, // Errors are extended in a few places, no point putting them in seperate files
    "ordered-imports": { "severity": "off" },
    "interface-over-type-literal": { "severity": "off" }, // Props and opts are common in this project, and they should be types
    "space-before-function-paren": { "severity": "off" },
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "rulesDirectory": []
}
